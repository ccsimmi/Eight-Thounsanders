<nav>
  <h1><%= mountain.name %></h1>
  <a class="home" href="/">Home</a>
</nav>
<p class="lead"><%= mountain.lead %></p>

<h2>Statistics</h2>
<p><strong>Height:</strong> <%= mountain.height %> m</p>
<p><strong>Range:</strong> <%= mountain.range %></p>
<p><strong>Countries:</strong> <%= mountain.country.join(', ') %></p>

<h2>About</h2>
<% mountain.content.forEach(paragraph => { %>
  <p><%= paragraph %></p>
<% }) %>

<h3>Other Eight Thousanders</h3>
<ul class="menu">
  <% mountains.forEach(mountain => { %>
    <li>
      <a href="/<%= mountain.slug %>">
        <%= mountain.name %> - <%= mountain.height %> m
      </a>
    </li>
  <% }) %>
</ul>