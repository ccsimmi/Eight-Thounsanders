<div id="map"></div>

<script>
  const mountain = <%- JSON.stringify(mountain) %>;
  const map = L.map('map', {
    zoomControl: false,        // remove UI buttons
    attributionControl: false, // remove attribution text
    dragging: false,           // disable map dragging
    scrollWheelZoom: false,    // disable mouse wheel zoom
    doubleClickZoom: false,    // disable double click zoom
    boxZoom: false,            // disable shift+drag zoom
    keyboard: false,           // disable keyboard navigation
    touchZoom: false           // disable pinch zoom
  }).setView([mountain.coordinates.lat, mountain.coordinates.lng], 10);

  L.tileLayer('https://tiles.stadiamaps.com/tiles/stamen_toner/{z}/{x}/{y}{r}.{ext}', {
    maxZoom: 5,
    attribution: '&copy; <a href="https://www.stadiamaps.com/" target="_blank">Stadia Maps</a> &copy; <a href="https://www.stamen.com/" target="_blank">Stamen Design</a> &copy; <a href="https://openmaptiles.org/" target="_blank">OpenMapTiles</a> &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
    ext: 'png'
  }).addTo(map);

  L.marker([mountain.coordinates.lat, mountain.coordinates.lng])
    .addTo(map)
</script>